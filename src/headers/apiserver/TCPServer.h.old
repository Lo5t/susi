#ifndef __TCPSERVER__
#define __TCPSERVER__

#include <event2/listener.h>
#include <event2/bufferevent.h>
#include <event2/buffer.h>

#include <arpa/inet.h>

#include <cstring>
#include <iostream>
#include <chrono>
#include <map>
#include <stdexcept>
#include <thread>
#include <mutex>

#include "apiserver/libevent_common.h"

namespace Susi {
namespace Api {

class TCPServer {
protected:
	struct Context{
		TCPServer *server;
		std::string sessionID;
	};
    struct event_base *base;
    std::map<std::string,struct evbuffer *> outputs;
    std::map<std::string,evutil_socket_t> sockets;
    struct evconnlistener *listener;
    std::thread runloop;
    std::mutex mutex;
    struct event *ev_user;

    void accept_callback(struct evconnlistener *listener,
		 evutil_socket_t fd, 
		 struct sockaddr *address, 
		 int socklen,
		 void *ctx);
    void read_callback(struct bufferevent *bev, void *ctx);	
    void event_callback(struct bufferevent *bev, short events, void *ctx);
    void stop_callback(evutil_socket_t, short events, void *user_data);
    
public:

	virtual void onConnect(std::string & sessionID) {}
	virtual void onData(std::string & sessionID, std::string & data) = 0;
	virtual void onClose(std::string & sessionID) {};

	TCPServer(unsigned short port);

	void send(std::string & sessionID, std::string & data);
	void close(std::string & sessionID);
	void join();
	void stop();

	virtual ~TCPServer();
};

}
}

#endif // __TCPSERVER__