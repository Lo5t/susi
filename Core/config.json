{
	"eventsystem" : {
		"threads": 4,
		"queuelen": 32
	},

	"heartbeat": {
		"fix":"me"
	},


	"dbmanager": [
		{
			"identifier" : "auth",
			"type": "sqlite3",
			"uri" : "./auth.sqlite3"
		}
	],

	"authcontroller": {
		"db": "auth"
	},

	"tcpapiserver": {
		"address": "[::1]:4000",
		"threads": 4,
		"backlog": 32
	},

	"enginestarter": {
		"path": "./engines"
	},

	"iocontroller": {
		"base": "."
	},

	"sessionmanager": {
		"lifetime": 600000
	},

	"statecontroller": {
		"file": "./states.json"
	},

	"syscallcontroller": {
		"threads": 4,
		"queuelen": 16,
		"commands": {
			"ECHO" : "echo $arg",
			"PWD"  : "pwd"
		}
	},

	"httpserver": {
		"address": "[::1]:8080",
		"assets": "./assets"
	},

	"autodiscovery": {
		"mcast": "239.23.23.23:4242",
		"address": "[::1]:4000"
	}
}